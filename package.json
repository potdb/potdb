{
  "name": "potdb",
  "version": "1.0.0",
  "description": "NoSQL, Kubernetes-native, HTTP/JSON-API database.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "serve": "node start.js",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "test": "npm run build --silent && jest --runInBand"
  },
  "keywords": [
    "document-store",
    "express",
    "level",
    "typescript"
  ],
  "author": "Richy Great",
  "license": "Apache-2.0",
  "dependencies": {
    "express": "^4.19.2",
    "level": "^8.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "@types/supertest": "^2.0.16"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/?(*.)+(spec|test).[tj]s?(x)", "**/?(*.)+(spec|test).ts"],
    "roots": ["<rootDir>/tests"],
    "moduleFileExtensions": ["ts", "js", "json"],
    "verbose": true
  }
}
